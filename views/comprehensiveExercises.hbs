<!-- begin: Subheader -->
<div class="kt-subheader kt-grid__item" id="kt_subheader">
  <div class="kt-container  kt-container&#45;&#45;fluid ">
    <div class="kt-subheader__main">
      <h3 class="kt-subheader__title">
        学习内容
      </h3>
      <span class="kt-subheader__separator kt-hidden"></span>
      <div class="kt-subheader__breadcrumbs">
        <a href="javascript:;" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
        <span class="kt-subheader__breadcrumbs-separator"></span>
        <a href="javascript:;" class="kt-subheader__breadcrumbs-link">
          软件研发
        </a>
        <span class="kt-subheader__breadcrumbs-separator"></span>
        <a href="javascript:;" class="kt-subheader__breadcrumbs-link">
          就业测评
        </a>
      </div>
    </div>
  </div>
</div>
<!-- end: Subheader -->

<!-- begin: Content -->
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid" ng-app="pageApp"
     ng-controller="pageCtrl">
  <div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
      <div class="kt-portlet__head-label">
      <span class="kt-portlet__head-icon">
        <i class="kt-font-brand fab fa fa-list-ul"></i>
			</span>

        <h3 class="kt-portlet__head-title">
          就业测评
        </h3>
      </div>
      <div class="kt-portlet__head-toolbar">
        <div class="kt-portlet__head-wrapper">
          <div class="kt-portlet__head-actions">
            <button type="button" class="btn btn-brand btn-elevate btn-icon-sm" ng-click="onShowEditModal()">
              <i class="fa fa-plus"></i>
              添加
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="kt-portlet__body">
      <!--begin: search form -->
      <div class="kt-form kt-form--label-right kt-margin-t-20- kt-margin-b-10">
        <div class="row align-items-center">
          <div class="col-xl-8 order-2 order-xl-1">
            <div class="row align-items-center">
              <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <div class="dropdown search-form-dropdown">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                      <span ng-bind="model.selectedExamType.examTypeName"></span>
                      <i class="flaticon2-down"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" x-placement="bottom-start">
                      <a class="dropdown-item" href="javascript:" ng-click="onExamTypeChange(0, '全部类型')">全部类型</a>
                      <div class="dropdown-divider"></div>
                      <a ng-repeat="data in model.examTypeList"
                         class="dropdown-item"
                         href="javascript:"
                         ng-click="onExamTypeChange(data.examTypeCode, data.examTypeName)"
                         ng-bind="data.examTypeName"></a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <div class="dropdown search-form-dropdown">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                      <span ng-bind="model.selectedDifficultyLevel.difficultyLevelName"></span>
                      <i class="flaticon2-down"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" x-placement="bottom-start">
                      <a class="dropdown-item" href="javascript:" ng-click="onDifficultyLevelChange(0, '全部难度')">全部难度</a>
                      <div class="dropdown-divider"></div>
                      <a ng-repeat="data in model.difficultyLevelList"
                         class="dropdown-item"
                         href="javascript:"
                         ng-click="onDifficultyLevelChange(data.difficultyLevelCode, data.difficultyLevelName)"
                         ng-bind="data.difficultyLevelName"></a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-4 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <div class="dropdown search-form-dropdown">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                      <span ng-bind="model.selectedDataStatus.statusName"></span>
                      <i class="flaticon2-down"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" x-placement="bottom-start">
                      <a class="dropdown-item" href="javascript:;" ng-click="onDataStatusChange('NULL', '所有状态')">所有状态</a>
                      <div class="dropdown-divider"></div>
                      <a ng-repeat="data in model.dataStatusList"
                         class="dropdown-item"
                         href="javascript:"
                         ng-click="onDataStatusChange(data.statusCode, data.statusName)"
                         ng-bind="data.statusName"></a>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        </div>
      </div>
      <!-- end: search form -->

      <!--begin: Datatable -->
      <div id="kt_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline table-fix"
                   id="kt_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 1313px;">
              <thead>
              <tr class="center" role="row">
                <th>标题</th>
                <th>考察点</th>
                <th>考察方向</th>
                <th>难度级别</th>
                <th>添加人</th>
                <th>添加时间</th>
                <th>当前状态</th>
                <th>操作</th>
              </tr>
              </thead>
              <tbody>
              <tr class="center" ng-repeat="data in model.dataList">
                <td ng-bind="data.exercisesTitle"></td>
                <td ng-bind="data.examKnowledge"></td>
                <td ng-bind="data.examTypeText"></td>
                <td ng-bind="data.difficultyLevelText"></td>
                <td ng-bind="data.createUser"></td>
                <td ng-bind="data.createTime"></td>
                <td>
                  <span class="kt-badge kt-badge--inline kt-badge--pill"
                        ng-class="{'kt-badge--primary': data.dataStatus == 'P', 'kt-badge--success': data.dataStatus == 'A', 'kt-badge--danger': data.dataStatus == 'D'}"
                        ng-bind="data.dataStatusText">
                  </span>
                </td>
                <td>
                  <span class="dropdown">
                    <a href="javascript:" class="btn btn-sm btn-clean btn-icon btn-icon-md" data-toggle="dropdown" aria-expanded="true">
                      <i class="la la-ellipsis-h"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                      <a class="dropdown-item" href="javascript:" ng-click="onShowEditModal(data)"><i class="la la-edit"></i> 编辑</a>
                      <a class="dropdown-item" href="javascript:" ng-click="onShowStatusModal(data)"><i class="la la-leaf"></i> 状态修改</a>
                      <a class="dropdown-item" href="javascript:" ng-click="onDelete(data)"><i class="la la-remove"></i> 删除</a>
                    </div>
                  </span>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row" ng-if="model.totalCount > 0">
          <div class="col-sm-12 col-md-5">
            <div class="dataTables_info" id="kt_table_1_info" role="status" aria-live="polite">
              显示第 <span ng-bind="model.fromIndex"></span> 到第 <span ng-bind="model.toIndex"></span>条数据，共计<span
                    ng-bind="model.totalCount"></span>条数据
            </div>
          </div>
          <div class="col-sm-12 col-md-7 dataTables_pager">
            <div class="dataTables_paginate paging_simple_numbers" id="kt_table_1_paginate">
              <ul class="pagination">

                <li class="paginate_button page-item previous" ng-class="{'disabled': model.prePageNum == -1}"
                    id="kt_table_1_previous" ng-click="onPrePage()">
                  <a href="javascript:;" aria-controls="kt_table_1" data-dt-idx="0" tabindex="0" class="page-link">
                    <i class="la la-angle-left"></i>
                  </a>
                </li>

                <li ng-repeat="pageNumber in model.paginationArray" class="paginate_button page-item"
                    ng-class="{'active': model.pageNumber == pageNumber}" ng-click="onPagination(pageNumber)">
                  <a href="javascript:;" aria-controls="kt_table_1" data-dt-idx="1" tabindex="0" class="page-link"
                     ng-bind="pageNumber"></a>
                </li>

                <li class="paginate_button page-item next" ng-class="{'disabled': model.nextPageNum == -1}"
                    id="kt_table_1_next" ng-click="onNextPage()">
                  <a href="javascript:;" aria-controls="kt_table_1" data-dt-idx="5" tabindex="0" class="page-link">
                    <i class="la la-angle-right"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!--end: Datatable -->

      <!--begin: upload modal -->
      <div class="modal fade" id="kt_modal_edit" tabindex="-1" role="dialog">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <form class="kt-form kt-form--label-right" name="myForm" novalidate>
                <div class="modal-header">
                  <h5 class="modal-title">新增就业测评</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  </button>
                </div>
                <div class="modal-body">
                  <div class="kt-portlet__body kt-padding-t-0">
                    <form class="kt-form kt-form--label-right">
                      <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">标题</label>
                        <div class="col-10">
                          <input class="form-control"
                                 name="title"
                                 ng-model="editModel.title"
                                 maxlength="50"
                                 type="text"
                                 required>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">考察点</label>
                        <div class="col-10">
                          <input class="form-control"
                                 name="examKnowledge"
                                 ng-model="editModel.examKnowledge"
                                 type="text"
                                 maxlength="500"
                                 required>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">类型</label>
                        <div class="col-10">
                          <div class="kt-radio-inline">
                            <label class="kt-radio">
                              <input type="radio" checked="checked" value="1" name="examType" ng-model="editModel.examType"> 服务端
                              <span></span>
                            </label>
                            <label class="kt-radio">
                              <input type="radio" value="2" name="examType" ng-model="editModel.examType"> 前端
                              <span></span>
                            </label>
                            <label class="kt-radio">
                              <input type="radio" value="3" name="examType" ng-model="editModel.examType"> 数据库
                              <span></span>
                            </label>
                            <label class="kt-radio">
                              <input type="radio" value="4" name="examType" ng-model="editModel.examType"> 全栈
                              <span></span>
                            </label>
                          </div>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">难度级别</label>
                        <div class="col-10">
                          <div class="kt-radio-inline">
                            <label class="kt-radio">
                              <input type="radio" checked="checked" value="1" name="difficultyLevel" ng-model="editModel.difficultyLevel"> 入门
                              <span></span>
                            </label>
                            <label class="kt-radio">
                              <input type="radio" value="2" name="difficultyLevel" ng-model="editModel.difficultyLevel"> 简单
                              <span></span>
                            </label>
                            <label class="kt-radio">
                              <input type="radio" value="3" name="difficultyLevel" ng-model="editModel.difficultyLevel"> 中等
                              <span></span>
                            </label>
                            <label class="kt-radio">
                              <input type="radio" value="4" name="difficultyLevel" ng-model="editModel.difficultyLevel"> 较难
                              <span></span>
                            </label>
                            <label class="kt-radio">
                              <input type="radio" value="5" name="difficultyLevel" ng-model="editModel.difficultyLevel"> 困难
                              <span></span>
                            </label>
                          </div>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">详细内容</label>
                        <div class="col-10">
                          <textarea class="form-control"
                                    rows="5"
                                    name="exercisesContent"
                                    ng-model="editModel.exercisesContent"
                                    maxlength="500"
                                    required></textarea>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label for="example-text-input" class="col-2 col-form-label">详细文档</label>
                        <div class="col-10">
                          <a ng-href="\{{editModel.documentUrl}}"
                             class="kt-link kt-link--danger"
                             style="margin-top: 10px"
                             target="_blank"
                             ng-if="editModel.documentUrl.length > 0"
                             ng-bind="editModel.documentUrl.substr(editModel.documentUrl.lastIndexOf('/')+1)"></a>
                          <button type="button" class="btn btn-secondary btn-sm" ng-click="onUpload()">上传</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                  <button type="button" class="btn btn-primary"
                          ng-disabled="
                             (myForm.title.$pristine && editModel.optionType == 'add')
                          || (myForm.title.$dirty && myForm.title.$invalid)

                          || (myForm.examKnowledge.$pristine && editModel.optionType == 'add')
                          || (myForm.examKnowledge.$dirty && myForm.examKnowledge.$invalid)

                          || (myForm.exercisesContent.$pristine && editModel.optionType == 'add')
                          || (myForm.exercisesContent.$dirty && myForm.exercisesContent.$invalid)"
                          ng-click="onSubmit()">提交</button>
                </div>
              </form>
            </div>
          </div>
      </div>
      <!--end: upload modal -->

      <!--begin: status modal -->
      <div class="modal fade" id="kt_modal_status" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
           aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <form class="kt-form kt-form--label-right" name="form-status" novalidate>
              <div class="modal-header">
                <h5 class="modal-title" ng-bind="statusModel.modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="form-group row form-group-marginless">
                    <label class="col-1 col-form-label"> </label>
                    <div class="col-10">
                      <div class="row">
                        <div class="col-6">
                          <label class="kt-option kt-option--plain">
                            <span class="kt-option__control">
                              <span class="kt-radio kt-radio--brand">
                                <input type="radio" name="status" value="A" ng-model="statusModel.status" ng-checked="statusModel.status == 'A'">
                                <span></span>
                              </span>
                            </span>
                            <span class="kt-option__label">
                              <span class="kt-option__head">
                                <span class="kt-option__title">
                                  启用
                                </span>
                              </span>
                              <span class="kt-option__body">
                                该综合练习向站内用户显示
                              </span>
                            </span>
                          </label>
                        </div>
                        <div class="col-6">
                          <label class="kt-option kt-option--plain">
                            <span class="kt-option__control">
                              <span class="kt-radio kt-radio--brand">
                                <input type="radio" name="status" value="D" ng-model="statusModel.status" ng-checked="statusModel.status == 'D'">
                                <span></span>
                              </span>
                            </span>
                            <span class="kt-option__label">
                              <span class="kt-option__head">
                                <span class="kt-option__title">
                                  禁用
                                </span>
                              </span>
                              <span class="kt-option__body">
                                该综合练习不能向站内用户显示
                              </span>
                            </span>
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" 
                        ng-disabled="statusModel.status.length === 0"
                        ng-click="onChangeStatus()">
                  修改
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!--end: status modal -->

      <div class="modal fade" id="kt_modal_upload" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <form class="kt-form kt-form--label-right" name="brandForm" novalidate>
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">上传详细文档（PDF）</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
              </div>
              <div class="modal-body">
                <div class="kt-portlet__body">
                  <div id="file-upload-document" class="fileUploadContent"></div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
              </div>
            </form>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>

<script src="../js/views/comprehensiveExercises.js" type="text/javascript"></script>
