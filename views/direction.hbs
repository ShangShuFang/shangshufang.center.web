<!-- begin: Subheader -->
<div class="kt-subheader kt-grid__item" id="kt_subheader">
  <div class="kt-container  kt-container&#45;&#45;fluid ">
    <div class="kt-subheader__main">
      <h3 class="kt-subheader__title">
        学习内容
      </h3>
      <span class="kt-subheader__separator kt-hidden"></span>
      <div class="kt-subheader__breadcrumbs">
        <a href="javascript:;" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
        <span class="kt-subheader__breadcrumbs-separator"></span>
        <a href="javascript:;" class="kt-subheader__breadcrumbs-link">
          软件研发
        </a>
        <span class="kt-subheader__breadcrumbs-separator"></span>
        <a href="javascript:;" class="kt-subheader__breadcrumbs-link">
          研发方向
        </a>
      </div>
    </div>
  </div>
</div>
<!-- end: Subheader -->

<!-- begin: Content -->
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid" ng-app="pageApp"
     ng-controller="pageCtrl">
  <div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
      <div class="kt-portlet__head-label">
      <span class="kt-portlet__head-icon">
        <i class="kt-font-brand fab fa-python"></i>
			</span>

        <h3 class="kt-portlet__head-title">
          研发方向
        </h3>
      </div>
      <div class="kt-portlet__head-toolbar">
        <div class="kt-portlet__head-wrapper">
          <div class="kt-portlet__head-actions">
            <button type="button" class="btn btn-brand btn-elevate btn-icon-sm" data-toggle="modal"
                    ng-click="onShowAddModal()">
              <i class="la la-plus"></i>
              添加
            </button>
          </div>
        </div>
      </div>
    </div>
    <div class="kt-portlet__body">
      <!--begin: Datatable -->
      <div id="kt_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline table-fix"
                   id="kt_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 1313px;">
              <thead>
              <tr role="row">
                <th>缩略图</th>
                <th>研发方向</th>
                <th>市场热度</th>
                <th>简介</th>
                <th>涉及技术</th>
                <th>当前状态</th>
                <th>操作</th>
              </tr>
              </thead>

              <tbody>
              <tr ng-repeat="data in model.dataList">
                <td class="customer-brand">
                  <a href="javascript:;" class="cell-option" ng-if="data.directionThumbnail == ''" ng-click="onShowThumbnailModal(data)">
                    <i class="la la-plus"></i>
                    添加
                  </a>
                  <img ng-src="\{{data.directionThumbnail}}" class="img-table-cell" ng-if="data.directionThumbnail !== ''" ng-click="onShowThumbnailModal(data)">
                </td>

                <td ng-bind="data.directionName"></td>
                <td>
                  <span class="kt-menu__link-icon">
                    <i class="fa fa-star" ng-class="{'technology-stars-select': data.directionStars >= 1}"></i>
                  </span>
                  <span class="kt-menu__link-icon">
                    <i class="fa fa-star" ng-class="{'technology-stars-select': data.directionStars >= 2}"></i>
                  </span>
                  <span class="kt-menu__link-icon">
                    <i class="fa fa-star" ng-class="{'technology-stars-select': data.directionStars >= 3}"></i>
                  </span>
                  <span class="kt-menu__link-icon">
                    <i class="fa fa-star" ng-class="{'technology-stars-select': data.directionStars >= 4}"></i>
                  </span>
                  <span class="kt-menu__link-icon">
                    <i class="fa fa-star" ng-class="{'technology-stars-select': data.directionStars >= 5}"></i>
                  </span>
                </td>
                <td class="technology-memo">
                  <p ng-bind="data.directionMemo" data-container="body" data-toggle="kt-tooltip" data-placement="bottom" title=""></p>
                </td>
                <td class="center">
                  <button type="button" class="btn btn-warning btn-elevate btn-circle btn-icon" ng-bind="data.technologyCount" ng-click="showRelateTechnology(data)"></button>
                </td>
                <td class="center">
                  <span class="kt-badge kt-badge--inline kt-badge--pill"
                        ng-class="{'kt-badge--primary': data.dataStatus == 'P', 'kt-badge--success': data.dataStatus == 'A', 'kt-badge--danger': data.dataStatus == 'D'}"
                        ng-bind="data.dataStatusText">
                  </span>
                </td>
                <td>
                  <span class="dropdown">
                    <a href="javascript:;" class="btn btn-sm btn-clean btn-icon btn-icon-md" data-toggle="dropdown"
                       aria-expanded="true">
                      <i class="la la-ellipsis-h"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right">
                      <a class="dropdown-item" href="javascript:;" ng-click="onShowChangeModal(data)"><i class="la la-edit"></i> 编辑</a>
                      <a class="dropdown-item" href="javascript:;" ng-click="onShowStatusModal(data)" ng-if="data.technologyThumbnail != ''"><i class="la la-leaf"></i> 状态修改</a>
                      <a class="dropdown-item" href="javascript:;" ng-click="onDelete(data)"><i class="la la-remove"></i> 删除</a>
                    </div>
                  </span>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12 col-md-5">
            <div class="dataTables_info" id="kt_table_1_info" role="status" aria-live="polite">
              显示第 <span ng-bind="model.fromIndex"></span> 到第 <span ng-bind="model.toIndex"></span>条数据，共计<span
                    ng-bind="model.totalCount"></span>条数据
            </div>
          </div>
          <div class="col-sm-12 col-md-7 dataTables_pager">
            <div class="dataTables_paginate paging_simple_numbers" id="kt_table_1_paginate">
              <ul class="pagination">

                <li class="paginate_button page-item previous" ng-class="{'disabled': model.prePageNum == -1}"
                    id="kt_table_1_previous" ng-click="onPrePage()">
                  <a href="javascript:;" aria-controls="kt_table_1" data-dt-idx="0" tabindex="0" class="page-link">
                    <i class="la la-angle-left"></i>
                  </a>
                </li>

                <li ng-repeat="pageNumber in model.paginationArray" class="paginate_button page-item"
                    ng-class="{'active': model.pageNumber == pageNumber}" ng-click="onPagination(pageNumber)">
                  <a href="javascript:;" aria-controls="kt_table_1" data-dt-idx="1" tabindex="0" class="page-link"
                     ng-bind="pageNumber"></a>
                </li>

                <li class="paginate_button page-item next" ng-class="{'disabled': model.nextPageNum == -1}"
                    id="kt_table_1_next" ng-click="onNextPage()">
                  <a href="javascript:;" aria-controls="kt_table_1" data-dt-idx="5" tabindex="0" class="page-link">
                    <i class="la la-angle-right"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!--end: Datatable -->

      <!--begin: thumbnail modal -->
      <div class="modal fade" id="kt_modal_brand" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
           aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <form class="kt-form kt-form--label-right" name="brandForm" novalidate>
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" ng-bind="model.thumbnailModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
              </div>
              <div class="modal-body">
                <div class="kt-portlet__body">
                  <div id="file-upload-brand" class="fileUploadContent"></div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                <button type="button"
                        class="btn btn-primary"
                        ng-click="onChangeThumbnail()"
                        ng-disabled="model.thumbnailUrl == ''">
                  提交
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!--end: brand modal -->

      <!--begin: edit modal -->
      <div class="modal fade" id="kt_modal_edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
           aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <form class="kt-form kt-form--label-right" name="myForm" novalidate>
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" ng-bind="model.modalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
              </div>
              <div class="modal-body">
                <div class="kt-portlet__body">
                  <div class="form-group row">
                    <label for="example-text-input" class="col-2 col-form-label">研发方向</label>
                    <div class="col-10">
                      <input type="text"
                             class="form-control"
                             name="directionName"
                             maxlength="15"
                             ng-class="{'is-invalid': model.directionNameIsInValid == 1, 'is-valid': model.directionNameIsInValid == 0}"
                             ng-model="model.directionName"
                             ng-blur="onDirectionNameBlur()"
                             required>
                      <div class="invalid-feedback" ng-if="model.directionNameIsInValid == 1">您输入的研发方向已存在</div>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="example-text-input" class="col-2 col-form-label">市场热度</label>
                    <div class="col-10">
                      <span class="kt-menu__link-icon" ng-click="onSelectStar(1)"><i class="fa fa-star" ng-class="{'technology-stars-select': model.directionStars >= 1}"></i></span>
                      <span class="kt-menu__link-icon" ng-click="onSelectStar(2)"><i class="fa fa-star" ng-class="{'technology-stars-select': model.directionStars >= 2}"></i></span>
                      <span class="kt-menu__link-icon" ng-click="onSelectStar(3)"><i class="fa fa-star" ng-class="{'technology-stars-select': model.directionStars >= 3}"></i></span>
                      <span class="kt-menu__link-icon" ng-click="onSelectStar(4)"><i class="fa fa-star" ng-class="{'technology-stars-select': model.directionStars >= 4}"></i></span>
                      <span class="kt-menu__link-icon" ng-click="onSelectStar(5)"><i class="fa fa-star" ng-class="{'technology-stars-select': model.directionStars >= 5}"></i></span>
                    </div>
                  </div>

                  <div class="form-group row">
                    <label for="example-text-input" class="col-2 col-form-label">描述说明</label>
                    <div class="col-10">
                      <textarea class="form-control" name="directionMemo" rows="8" maxlength="256" ng-model="model.directionMemo" required></textarea>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                <button type="button"
                        class="btn btn-primary"
                        ng-click="onSubmit()"
                        ng-disabled="(myForm.directionName.$pristine && model.add)
                                  || (myForm.directionName.$dirty && myForm.directionName.$invalid)
                                  || model.directionNameIsInValid !== 0
                                  || model.directionStars == 0
                                  || (myForm.directionMemo.$pristine && model.add)
                                  || (myForm.directionMemo.$dirty && myForm.directionMemo.$invalid)  ">
                  提交
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!--end: edit modal -->

      <!--begin: status modal -->
      <div class="modal fade" id="kt_modal_status" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
           aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <form class="kt-form kt-form--label-right" name="form-status" novalidate>
              <div class="modal-header">
                <h5 class="modal-title" ng-bind="model.statusModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
              </div>
              <div class="modal-body">
                <div class="row">
                  <div class="form-group row form-group-marginless">
                    <label class="col-1 col-form-label"> </label>
                    <div class="col-10">
                      <div class="row">
                        <div class="col-6">
                          <label class="kt-option kt-option--plain">
                            <span class="kt-option__control">
                              <span class="kt-radio kt-radio--brand">
                                <input type="radio" name="status" value="A" ng-model="model.status" ng-checked="model.status == 'A'">
                                <span></span>
                              </span>
                            </span>
                            <span class="kt-option__label">
                              <span class="kt-option__head">
                                <span class="kt-option__title">
                                  正常
                                </span>
                              </span>
                              <span class="kt-option__body">
                                该研发方向可向站内用户显示
                              </span>
                            </span>
                          </label>
                        </div>
                        <div class="col-6">
                          <label class="kt-option kt-option--plain">
                            <span class="kt-option__control">
                              <span class="kt-radio kt-radio--brand">
                                <input type="radio" name="status" value="D" ng-model="model.status" ng-checked="model.status == 'D'">
                                <span></span>
                              </span>
                            </span>
                            <span class="kt-option__label">
                              <span class="kt-option__head">
                                <span class="kt-option__title">
                                  禁用
                                </span>
                              </span>
                              <span class="kt-option__body">
                                该研发方向不能向站内用户显示
                              </span>
                            </span>
                          </label>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" ng-click="onChangeStatus()">
                  修改
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!--end: status modal -->

      <!--begin: status modal -->
      <div class="modal fade" id="kt_modal_relate_technology" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
           aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <form class="kt-form kt-form--label-right" name="form-status" novalidate>
              <div class="modal-header">
                <h5 class="modal-title" ng-bind="model.relateTechnologyModalTitle"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                </button>
              </div>
              <div class="modal-body">
                <ul class="relate-technology">
                  <li ng-repeat="data in model.relateTechnologyList" ng-bind="data.technologyName"></li>
                </ul>
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
              </div>
            </form>
          </div>
        </div>
      </div>
      <!--end: status modal -->

    </div>
  </div>
</div>

<script src="../js/views/direction.js" type="text/javascript"></script>
