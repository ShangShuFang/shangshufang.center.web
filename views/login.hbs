<!-- begin::Body -->
<body class="kt-quick-panel--right kt-demo-panel--right kt-offcanvas-panel--right kt-header--fixed kt-header-mobile--fixed kt-subheader--enabled kt-subheader--fixed kt-subheader--solid kt-aside--enabled kt-aside--fixed kt-page--loading">

<!-- begin:: Page -->
<div class="kt-grid kt-grid--ver kt-grid--root">
  <div class="kt-grid kt-grid--hor kt-grid--root  kt-login kt-login--v3 kt-login--signin" id="kt_login">
    <div class="kt-grid__item kt-grid__item--fluid kt-grid kt-grid--hor" style="background-image: url(../media/bg/bg-3.jpg);">
      <div class="kt-grid__item kt-grid__item--fluid kt-login__wrapper">
        <div class="kt-login__container">
          <div class="kt-login__logo">
            <a href="#">
              <img src="../images/logo_s.png" style="width: 80px">
            </a>
          </div>
          <div class="kt-login__signin" ng-app="pageApp" ng-controller="pageCtrl">
            <div class="kt-login__head">
              <h2 class="kt-login__title">上书房智慧教育后台管理中心</h2>
            </div>
            <form class="kt-form" name="myForm" novalidate>
              <div class="input-group">
                <input class="form-control" type="tel" placeholder="手机号码" minlength="11" maxlength="11" name="cellphone" ng-model="model.cellphone" required autocomplete="off">
              </div>
              <div class="input-group">
                <input class="form-control" type="password" placeholder="密码" maxlength="12" name="password" ng-model="model.password" required>
              </div>
              <div class="row kt-login__extra">
                <div class="col-6">
                  <label class="kt-checkbox">
                    <input type="checkbox" name="remember" ng-checked="model.isRemember"> 记住我
                    <span></span>
                  </label>
                </div>
              </div>
              <div class="kt-login__actions">
                <button type="button"
                        class="btn btn-brand btn-block btn-elevate kt-login__btn-primary"
                        ng-click="onLogin()"
                        ng-disabled="myForm.cellphone.$pristine
                                  || (myForm.cellphone.$dirty && myForm.cellphone.$invalid)
                                  || myForm.password.$pristine
                                  || (myForm.password.$dirty && myForm.password.$invalid)">
                  登陆
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- end:: Page -->


</body>

<!-- end::Body -->
</html>