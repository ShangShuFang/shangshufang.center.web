<!-- begin: Subheader -->
<div class="kt-subheader kt-grid__item" id="kt_subheader">
  <div class="kt-container  kt-container&#45;&#45;fluid ">
    <div class="kt-subheader__main">
      <h3 class="kt-subheader__title">
        客户信息
      </h3>
      <span class="kt-subheader__separator kt-hidden"></span>
      <div class="kt-subheader__breadcrumbs">
        <a href="javascript:" class="kt-subheader__breadcrumbs-home"><i class="flaticon2-shelter"></i></a>
        <span class="kt-subheader__breadcrumbs-separator"></span>
        <a href="javascript:" class="kt-subheader__breadcrumbs-link">
          合作高校
        </a>
        <span class="kt-subheader__breadcrumbs-separator"></span>
        <a href="javascript:" class="kt-subheader__breadcrumbs-link">
          就业测评批改
        </a>
      </div>
    </div>
  </div>
</div>
<!-- end: Subheader -->

<!-- begin: Content -->
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid" ng-app="pageApp"
     ng-controller="pageCtrl">
  <div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head kt-portlet__head--lg">
      <div class="kt-portlet__head-label">
			<span class="kt-portlet__head-icon">
				<i class="kt-font-brand fa fa-user-tie"></i>
			</span>
        <h3 class="kt-portlet__head-title">
          就业测评练习
        </h3>
      </div>
    </div>
    <div class="kt-portlet__body">
      <!--begin: search form -->
      <div class="kt-form kt-form--label-right kt-margin-b-10">
        <div class="row align-items-center">
          <div class="col-xl-12">
            <div class="row align-items-center">
              <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <div class="dropdown search-form-dropdown">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                      <span ng-bind="model.selectedLanguage.languageName"></span>
                      <i class="flaticon2-down"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" x-placement="bottom-start">
                      <a class="dropdown-item" href="javascript:" ng-click="onLanguageChange(0, '全部编程语言')">全部编程语言</a>
                      <div class="dropdown-divider"></div>
                      <a ng-repeat="data in model.languageList"
                         class="dropdown-item"
                         href="javascript:"
                         ng-click="onLanguageChange(data.languageID, data.languageName)"
                         ng-bind="data.languageName"></a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <div class="dropdown search-form-dropdown">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                      <span ng-bind="model.selectedUniversity.universityName"></span>
                      <i class="flaticon2-down"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" x-placement="bottom-start">
                      <a class="dropdown-item" href="javascript:" ng-click="onUniversityChange(0, '所有高校')">所有高校</a>
                      <div class="dropdown-divider"></div>
                      <a ng-repeat="data in model.universityList"
                         class="dropdown-item"
                         href="javascript:"
                         ng-click="onUniversityChange(data.universityCode, data.universityName)"
                         ng-bind="data.universityName"></a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <div class="dropdown search-form-dropdown">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                      <span ng-bind="model.selectedSchool.schoolName"></span>
                      <i class="flaticon2-down"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" x-placement="bottom-start">
                      <a class="dropdown-item" href="javascript:" ng-click="onSchoolChange(0, '所有二级学院')">所有二级学院</a>
                      <div class="dropdown-divider"></div>
                      <a ng-repeat="data in model.schoolList"
                         class="dropdown-item"
                         href="javascript:"
                         ng-click="onSchoolChange(data.schoolID, data.schoolName)"
                         ng-bind="data.schoolName"></a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <div class="dropdown search-form-dropdown">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                      <span ng-bind="model.selectedMajor.majorName"></span>
                      <i class="flaticon2-down"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" x-placement="bottom-start">
                      <a class="dropdown-item" href="javascript:" ng-click="onMajorChange(0, '所有专业')">所有专业</a>
                      <div class="dropdown-divider"></div>
                      <a ng-repeat="data in model.majorList"
                         class="dropdown-item"
                         href="javascript:"
                         ng-click="onMajorChange(data.majorID, data.majorName)"
                         ng-bind="data.majorName"></a>
                    </div>
                  </div>
                </div>
              </div>

              <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <div class="dropdown search-form-dropdown">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown" aria-haspopup="true"
                            aria-expanded="false">
                      <span ng-bind="model.selectedStatus.statusName"></span>
                      <i class="flaticon2-down"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" x-placement="bottom-start">
                      <a class="dropdown-item" href="javascript:" ng-click="onStatusChange('NULL', '全部状态')">全部状态</a>
                      <div class="dropdown-divider"></div>
                      <a ng-repeat="data in model.statusList"
                         class="dropdown-item"
                         href="javascript:"
                         ng-click="onStatusChange(data.statusCode, data.statusName)"
                         ng-bind="data.statusName"></a>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-md-2 kt-margin-b-20-tablet-and-mobile">
                <div class="kt-form__group kt-form__group--inline width-full">
                  <input type="text" class="form-control" ng-keydown="onFullNameKeyDown($event)"
                         ng-model="model.fullName" placeholder="学生姓名">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- end: search form -->

      <!--begin: Datatable -->
      <div id="kt_table_1_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline"
                   id="kt_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 1313px;">
              <thead>
              <tr role="row">
                <th>高校</th>
                <th>学院</th>
                <th>专业</th>
                <th>学生</th>
                <th>习题类型</th>
                <th>习题标题</th>
                <th>习题难度</th>
                <th>编码语言</th>
                <th>当前状态</th>
                <th>提交时间</th>
                <th>修改时间</th>
                <th>操作</th>
              </tr>
              </thead>
              <tbody>
              <tr ng-repeat="data in model.dataList">
                <td ng-bind="data.universityName"></td>
                <td ng-bind="data.schoolName"></td>
                <td ng-bind="data.majorName"></td>
                <td ng-bind="data.fullName"></td>
                <td ng-bind="data.examTypeText"></td>
                <td ng-bind="data.exercisesTitle"></td>
                <td ng-bind="data.difficultyLevelText"></td>
                <td ng-bind="data.programLanguageName"></td>
                <td>
                  <span class="kt-badge kt-badge--inline kt-badge--pill"
                        ng-class="{'kt-badge--primary': data.dataStatus == 'P', 'kt-badge--success': data.dataStatus == 'Y', 'kt-badge--danger': data.dataStatus == 'N'}"
                        ng-bind="data.dataStatusText">
                  </span>
                </td>
                <td ng-bind="data.createTime"></td>
                <td ng-bind="data.updateTime"></td>
                <td>
                  <button type="button" class="btn btn-sm" ng-class="{'btn-danger': data.dataStatus == 'P', 'btn-success': data.dataStatus != 'P'}" ng-click="onCorrect(data)">
                    <span ng-if="data.dataStatus == 'P'">批改</span>
                    <span ng-if="data.dataStatus != 'P'">查看</span>
                  </button>
                </td>
              </tr>
              </tbody>
            </table>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12 col-md-5">
            <div class="dataTables_info" id="kt_table_1_info" role="status" aria-live="polite">
              显示第 <span ng-bind="model.fromIndex"></span> 到第 <span ng-bind="model.toIndex"></span>条数据，共计<span
                    ng-bind="model.totalCount"></span>条数据
            </div>
          </div>
          <div class="col-sm-12 col-md-7 dataTables_pager">
            <div class="dataTables_paginate paging_simple_numbers" id="kt_table_1_paginate">
              <ul class="pagination">

                <li class="paginate_button page-item previous" ng-class="{'disabled': model.prePageNum == -1}"
                    id="kt_table_1_previous" ng-click="onPrePage()">
                  <a href="javascript:" aria-controls="kt_table_1" data-dt-idx="0" tabindex="0" class="page-link">
                    <i class="la la-angle-left"></i>
                  </a>
                </li>

                <li ng-repeat="pageNumber in model.paginationArray" class="paginate_button page-item"
                    ng-class="{'active': model.pageNumber == pageNumber}" ng-click="onPagination(pageNumber)">
                  <a href="javascript:" aria-controls="kt_table_1" data-dt-idx="1" tabindex="0" class="page-link"
                     ng-bind="pageNumber"></a>
                </li>

                <li class="paginate_button page-item next" ng-class="{'disabled': model.nextPageNum == -1}"
                    id="kt_table_1_next" ng-click="onNextPage()">
                  <a href="javascript:" aria-controls="kt_table_1" data-dt-idx="5" tabindex="0" class="page-link">
                    <i class="la la-angle-right"></i>
                  </a>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <!--end: Datatable -->

    </div>
  </div>

  <div class="modal fade show" id="correct_modal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">就业习题批改</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          </button>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-md-6">
              <h4 class="text-center kt-margin-t-15">练习内容</h4>
              <form class="kt-form kt-form--label-right">
                <div class="kt-portlet__body">
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">练习标题：</label>
                    <div class="col-md-10">
                      <label class="col-form-label" ng-bind="correctModel.exercisesTitle"></label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">考察方向：</label>
                    <div class="col-md-10">
                      <label class="col-form-label" ng-bind="correctModel.examTypeText"></label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">考察点：</label>
                    <div class="col-md-10">
                      <label class="col-form-label" ng-bind="correctModel.examKnowledge"></label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">难度级别：</label>
                    <div class="col-md-10">
                      <label class="col-form-label" ng-bind="correctModel.difficultyLevelText"></label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">习题要求：</label>
                    <div class="col-md-10">
                      <p class="col-form-label kt-align-left retain-white-enter" ng-bind="correctModel.exercisesContent">
                      </p>
                    </div>
                  </div>
                </div>
              </form>
            </div>
            <div class="col-md-6">
              <h4 class="text-center kt-margin-t-15">练习批改</h4>
              <form class="kt-form kt-form--label-right">
                <div class="kt-portlet__body">
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">学生：</label>
                    <div class="col-md-10">
                      <label class="col-form-label">
                        <span ng-bind="correctModel.fullName">姓名</span>
                        <span ng-bind="correctModel.universityName">高校名称</span>
                        <span ng-bind="correctModel.schoolName">二级学院</span>
                        <span ng-bind="correctModel.majorName">专业</span>
                      </label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">开发语言：</label>
                    <div class="col-md-10">
                      <label class="col-form-label" ng-bind="correctModel.programLanguageName"></label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">练习代码：</label>
                    <div class="col-md-10">
                      <label class="col-form-label">
                        <a ng-href="\{{correctModel.gitUrl}}" target="_blank" class="kt-link kt-link--brand">查看代码</a>
                      </label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">提交时间：</label>
                    <div class="col-md-10">
                      <label class="col-form-label" ng-bind="correctModel.createTime"></label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">修改时间：</label>
                    <div class="col-md-10">
                      <label class="col-form-label" ng-bind="correctModel.updateTime"></label>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">批改结果：</label>
                    <div class="col-md-10">
                      <div class="kt-radio-inline">
                        <label class="kt-radio">
                          <input type="radio" name="result" value="Y" ng-model="correctModel.correctResult"> 正确
                          <span></span>
                        </label>
                        <label class="kt-radio">
                          <input type="radio" name="result" value="N" ng-model="correctModel.correctResult"> 错误
                          <span></span>
                        </label>
                      </div>
                    </div>
                  </div>
                  <div class="form-group row">
                    <label class="col-md-2- col-form-label" style="width: 80px;">批改评语：</label>
                    <div class="col-md-10">
                      <textarea class="form-control" rows="5" maxlength="500" ng-model="correctModel.reviewMemo"></textarea>
                    </div>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">关闭</button>
          <button type="button" class="btn btn-primary" ng-if="correctModel.dataStatus == 'P'" ng-click="onSubmit()">提交</button>
        </div>
      </div>
    </div>
  </div>

</div>

<script src="/js/views/studentComprehensiveExercises.js" type="text/javascript"></script>
